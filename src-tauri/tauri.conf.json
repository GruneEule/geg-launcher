{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GEG Launcher",
  "version": "0.1.0",
  "identifier": "gg.grueneeule.geglauncher",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "GEG Launcher",
        "width": 1280,
        "height": 800,
        "minWidth": 1080,
        "minHeight": 690,
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "ipc:", "http://ipc.localhost"],
        "connect-src": [
          "'self'",
          "https://api.iconify.design",
          "https://*.modrinth.com",
          "https://sessionserver.mojang.com",
          "https://*.norisk.gg"
        ],
        "img-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "https://*.modrinth.com",
          "https://cdn.modrinth.com",
          "https://*.norisk.gg",
          "https://textures.minecraft.net",
          "http://textures.minecraft.net",
          "https://crafatar.com",
          "https://media.forgecdn.net",
          "data:",
          "https://qr-generator-putuwaw.vercel.app"
        ]
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": ["**/*"]
        }
      },
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "singleInstance": {
      "active": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "deb", "appimage", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false,
    "publisher": null,
    "externalBin": null,
    "fileAssociations": [
      {
        "ext": ["noriskpack"],
        "name": "NoriskPack File",
        "description": "NoRiskClient Modpack File"
      },
      {
        "ext": ["gegpack"],
        "name": "GEGPack File",
        "description": "GEG Launcher Modpack File"
      }
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "dmg": {
        "background": "dmg/background.png",
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": [],
        "files": {}
      }
    },
    "windows": {
      "signCommand": null,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "timestampUrl": null,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "en-US"
      }
    }
  }
}
